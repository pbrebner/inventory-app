<!-- views/editMovie.ejs -->
<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <%- include('header'); -%>
        <main>
            <h1><%= title %></h1>
            <form action=<%= `/movies/${movie.id}/update` %> method="POST">
                <label for="title">Title: </label>
                <input type="text" name="title" id="title" value="<%= movie.title %>" required>
                <label for="year">Year Released: </label>
                <input type="text" name="year" id="year" value="<%= movie.yr_released %>" required>
                <button type="submit">Edit</button>
            </form>

            <form action=<%= `/movies/${movie.id}/delete` %> method="POST">
                <button type="submit">Delete</button>
            </form>
        </main>
        <%- include('footer'); -%>
    </body>
</html>